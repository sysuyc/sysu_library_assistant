<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   	android:background="@drawable/loginphoto"
    tools:context="com.example.library_helper.MainActivity" >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/textView2"
        android:text="@string/studentid"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/hello_world"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/stu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview1"
        android:layout_alignLeft="@+id/textView2"
        android:ems="9" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview1"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="30dp"
        android:text="@string/password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/stu_passwosrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview2"
        android:layout_alignLeft="@+id/stu_id"
        android:ems="9"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forgetbtn"
        android:layout_alignBottom="@+id/forgetbtn"
        android:layout_alignLeft="@+id/textview2"
        android:text="记住密码" />

    <TextView
        android:id="@+id/forgetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/stu_id"
        android:layout_below="@+id/stu_passwosrd"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:text="忘记密码？"
        android:textColor="#ffff00"
        android:textSize="16sp" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_alignRight="@+id/stu_id"
        android:layout_below="@+id/checkBox1"
        android:layout_marginTop="23dp"
        android:text="登录"
        android:background="@drawable/my_button_style" />

    <Button
        android:id="@+id/travelerBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginbtn"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_below="@+id/loginbtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_button_style"
        android:text="游客身份登陆" />

    <Button
        android:id="@+id/clearHisBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgetbtn"
        android:layout_alignRight="@+id/loginbtn"
        android:layout_alignTop="@+id/travelerBtn"
        android:background="@drawable/my_button_style"
        android:text="清除历史缓存" />

</RelativeLayout>